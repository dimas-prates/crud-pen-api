{
	"name": "crud-pen-api",
	"version": "1.0.0",
	"description": "Destined to practice application layered system",
	"main": "./build/server.js",
	"repository": "git@github.com:dimas-prates/crud-pen-api.git",
	"author": "Dimas Prates",
	"license": "MIT",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-async-errors": "^3.1.1",
		"morgan": "^1.10.0",
		"pg": "^8.7.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.7"
	},
	"devDependencies": {
		"@types/babel__core": "^7.1.19",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^28.1.7",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.7.11",
		"@typescript-eslint/eslint-plugin": "^5.34.0",
		"@typescript-eslint/parser": "^5.34.0",
		"eslint": "^8.22.0",
		"jest": "^28.1.3",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.8",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.4"
	},
	"scripts": {
		"dev": "ts-node-dev --transpile-only --respawn --ignore-watch node_modules ./src/server.ts",
		"start": "node ./build/server.js",
		"prebuild": "rimraf ./build",
		"build": "yarn prebuild && tsc",
		"typeorm": "typeorm-ts-node-commonjs",
		"migration:generate": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/migrations/migration",
		"migration:run": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run",
		"test": "jest"
	}
}
